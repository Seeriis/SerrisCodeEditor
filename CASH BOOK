    <script>
        function submitDeposit() {
            // Retrieve form values
            var date = document.getElementById("date").value;
            var congregation = document.getElementById("congregation").value;
            var congregationNumber = document.getElementById("congregationNumber").value;
            var category = document.getElementById("category").value;
            var amount = document.getElementById("amount").value;
            var amountInWords = document.getElementById("amountInWords").value;

            // Update table values based on category and week
            switch (category) {
                case "Members":
                    updateTableValue("members", date, amount);
                    break;
                case "Officers":
                    updateTableValue("officers", date, amount);
                    break;
                case "Burial":
                    updateTableValue("burial", date, amount);
                    break;
                case "Expenditure":
                    updateTableValue("expenditure", date, amount);
                    break;
                default:
                    break;
            }

            // Clear form values
            document.getElementById("date").value = "";
            document.getElementById("congregation").value = "";
            document.getElementById("congregationNumber").value = "";
            document.getElementById("category").value = "";
            document.getElementById("amount").value = "";
            document.getElementById("amountInWords").value = "";
        }

        function updateTableValue(category, date, amount) {
            // Get the week number for the given date
            var week = getWeekNumber(new Date(date));

            // Update the corresponding table cell with the amount
            var cellId = category + "Week" + week;
            var cell = document.getElementById(cellId);
            cell.textContent = Number(cell.textContent) + Number(amount);

            // Update the total for the category
            var totalId = category + "Total";
            var totalCell = document.getElementById(totalId);
            totalCell.textContent
