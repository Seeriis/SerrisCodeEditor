<script>
function submitDeposit() {
// Get input values
var date = document.getElementById("date").value;
var congregation = document.getElementById("congregation").value;
var congregationNumber = document.getElementById("congregationNumber").value;
var category = document.getElementById("category").value;
var amount = document.getElementById("amount").value;
var amountInWords = document.getElementById("amountInWords").value;

        // Update table with input values
        var table = document.getElementById("table");
        var row = table.insertRow();
        row.innerHTML = "<td>" + category + "</td><td>" + date + "</td><td>" + congregation + "</td><td>" + congregationNumber + "</td><td>" + amount + "</td><td>" + amountInWords + "</td>";

        // Update category total
        var categoryTotal = parseInt(document.getElementById(category + "Total").textContent) + parseInt(amount);
        document.getElementById(category + "Total").textContent = categoryTotal;

        // Update week total
        var weekNumber = getWeekNumber(new Date(date));
        var weekTotal = parseInt(document.getElementById(category + "Week" + weekNumber).textContent) + parseInt(amount);
        document.getElementById(category + "Week" + weekNumber).textContent = weekTotal;

        // Reset input values
        document.getElementById("date").value = "";
        document.getElementById("congregation").value = "";
        document.getElementById("congregationNumber").value = "";
        document.getElementById("category").value = "";
        document.getElementById("amount").value = "";
        document.getElementById("amountInWords").value = "";
    }

    function getWeekNumber(date) {
        var d = new Date(+date);
        d.setHours(0, 0, 0);
        d.setDate(d.getDate() + 4 - (d.getDay() || 7));
        var yearStart = new Date(d.getFullYear(), 0, 1);
        var weekNo = Math.ceil((((d - yearStart) / 86400000) + 1) / 7);
        return weekNo;
    }
</script>
